<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Dialog" parent="@android:style/Theme.Light">
    	<item name="android:minWidth">300dp</item>

        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@drawable/panel_background</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
	    <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="TetherTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textColorPrimary">#61615E</item>
        <item name="android:textColorPrimaryInverse">@android:color/white</item>
        <item name="android:selectableItemBackground">@drawable/selectable_item_background_compat</item>
    </style>
</resources>